<div class="container">
  <div class="small-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),  url(<%= image_path "banner2" %>);">
    <h1>Create A New Cocktail</h1>
  </div>
  <div class="col-xs-6 offset-md-3 padding-top">
<%= simple_form_for @cocktail do |f| %>
<%= f.input :name%>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
<br>
<%= f.submit %>
<% end %>
</div>
</div>
