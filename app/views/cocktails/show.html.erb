<div class="container">

<div><%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %></div>
<h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
<h4>
  <%= dose.ingredient.name %>
  <%= dose.description %>
</h4>
<h6><%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %></h6>
<% end %>

<%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>
</div>
